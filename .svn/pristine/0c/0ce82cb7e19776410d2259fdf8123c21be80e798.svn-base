.page-index{
    background: #FFF;
    overflow: hidden;
    padding-bottom: 2.68rem;
}
.mint-header-title {
  height: 1rem !important;
  line-height: 1rem;
}
.page-swipe{
  z-index: 1;
  position: relative;
  left: 0;
  top: 0;
  width: 100%;
  margin-top: 2.65rem;
  box-sizing: border-box;
  overflow-x: hidden;
  overflow-y: auto;
}
.page-swipe .mint-swipe {
    width:100%;
    height: 9.0rem;
    max-height: 360px;
    margin-bottom: 2%;
}
.page-swipe .mint-swipe img{
    width: 100%;
    height:100%;
}
.page-swipe .mint-swipe-item{
    background-image: url('../loaded.gif');
    background-size: 35px;
    background-position: center ;
    background-repeat: no-repeat;
}
.index-header .mint-search{
    height:auto;
}
.page-index .top-header {
    position: fixed;
    top: 0;
    height: 2.5rem;
    z-index: 3;
    width: 100%;
}
.index-header {
    position: relative;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    display: flex;
    display: -webkit-flex;
    padding: .15rem 0;
    background-color: #d9d9d9;
    height: 2.5rem;
}
.index-header .left{
  width: 15%;
  line-height: 2.35rem;
  font-size: 0;
  text-align: center;
  display: inline-block;
}
.index-header .logo {
    width: 15%;
    height: 2.35rem;
    /*background: url("../mi.svg") no-repeat center center;*/
    background-size: 1.765rem;
    padding: .55rem;

}
.index-header .logo img{
  display: block;
  line-height: 2.5rem;
  height: 1.25rem;
}
.index-header .search_bar{
    width: 70%;
    font-size: 16px;
    display: inline-block;
    vertical-align: top;

}
.search_bar input{
    width: 100%;
    line-height: 1.76rem;
    height: 1.76rem; 
    border: none;
    padding: 0;
    margin: .3rem 0 0 0;
    outline: none;
    border-radius: .3rem;
    border:1px solid #ddd;
    padding-left: 1.8rem;
    background: url(../search.svg) no-repeat .35rem .35rem;
    background-size: 1.176rem;
    background-color: #fff;
}
.index-header .right{
  outline: none;
  border:none;
  width: 2.7rem;
  height: 1.765rem;
  margin: .3rem;
  background: rgba(0,0,0,.5);
  border-radius: .5rem;
  color: #fff;
  line-height: 30px;
}
.itmes-list{
  background-color: #fff;
  margin-bottom:.5%;
}
.itmes-list .itmes:nth-child(2n){
    margin-left:2%;
/*    margin-right:2%;*/
}
.itmes-list .itmes{
    margin-top: 2%;
    margin-left: 1.5%;
}
.itmes-list .itmes .proName{
    font-size: 0.85rem;
    padding: .1rem 0;
}
.itmes-list .itmes .proBrief{
    font-size: 0.65rem;
    padding: .3rem 0;
    color: rgba(0,0,0,.54);
    padding: .1rem 0;
}
.itmes-list .itmes .proPrice{
  font-size: .95rem;
  color: #fff;
  padding: .1rem 0;
}
.itmes-list .proInfo{
  background-color: #fff;
}
.itmes-list .itmes img{
  width: 8.91rem;
  height: 8.91rem;
}
.page-list .item-ul li{
    padding-bottom: 0.5rem 0;
    display: -webkit-box;
    -webkit-box-align: center;
    display: -webkit-flex; /* Safari */
    display: -moz-box;
    display: -moz-flex;
    display: -ms-flexbox;
    display: flex;
    padding: 0.454545rem 0;
    border-bottom: 1px solid #eee;
}
.page-list .item-img{
    height:3.636364rem;
    text-align: center;
    position: relative;
    vertical-align: middle;
    margin: 0.272727rem 0;
}
.page-list .porphyra{
   position: absolute;
   top: 0;
   width:3.181818rem;
   height:3.181818rem;
   opacity:.9;
}
.page-list .item-info {
   -webkit-box-flex: 1;
   box-flex: 1;
   margin-right: 0.363636rem;
}
.item-info .name{
   color:#000;
   font-size: 0.772727rem;
   margin-bottom: 0.227273rem;
}
.item-info .brief{
   font-size:0.681818rem;
   line-height: 0.909091rem;
   margin-bottom: 0.227273rem;
}
.item-info .price{
   color:#FE4900;
   font-size: 0.772727rem;
}

.footer{
  position: fixed;
  left:0;
  bottom:0;
  width:100%;
  height:auto;
  background-color: #fff;
  border-top: 1px solid #eee;
  font-size:0.65rem;
  color:#333;
}
.footer img{
  width:1.2rem;
  height:1.2rem;
  margin:0 auto 2px;
}
.footer > *{
  text-align: center;
  display: inline-block;
  padding:5px 0;
}
.footer .router-link-active{
  color:#41b883;
  background-color: #eee;
}