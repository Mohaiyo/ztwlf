.page-wrap{
	padding-bottom: 2.7rem;
}
.product-nav>ul{
	display: flex;
	justify-content: center;
	text-align: center;
}
.product-nav li{
	flex: 1;
	margin: 10px 0;
	font-size: .7rem;
	border-right: 1px solid #ddd;

}
.pro-introduction .page-swipe{
  z-index: 1;
  position: relative;
  left: 0;
  top: 0;
  width: 100%;
  margin-top: .2rem;
  box-sizing: border-box;
  overflow-x: hidden;
  overflow-y: auto;
}
.product-nav li:last-child{
	border-right: none;
}
.product-nav li.active{
	color: #ffa000;
	transition: transform .1s;
	transform: scale(1.0);
	font-weight: bold;
}
.pro-introduction .sale{
	display: flex;
}
.pro-declaration{
	padding: 2%;
}
.sale .sale-wrap{
	padding:.4rem .4rem;
	width: 100%;
}
.sale {
	flex: 1;
	/*border-right: 1px solid #ddd;*/
	line-height: 1.1rem;
}
/*.sale .right{
	flex: 1;
	display: flex;
	text-align: center;
	align-items: flex-end;
	justify-content: center;
}*/
.sale .sale-wrap>div{
	display: flex;
}
.sale .sale-wrap>div p{
	flex: 4;
}
.sale .sale-wrap>div a{
	flex: 1;
	display: inline-block;
	width: 2rem;
	height: 1.2rem;
	margin: 0 auto;
	background-color: #f0ca00;
	border-radius: .5rem;
	line-height: 1.2rem;
	text-align: center;
}
.recommend h4{
	font-size: .9rem;
	padding-left: .3rem;
	font-weight: bold;
	border-top: 1px solid #ddd;
	color: #000;
	margin-top: .4rem;
	padding-top: .2rem;
	padding-left: .5rem;
}
.noRecomd {
	text-align: center;
}
.noRecomd p{
	font-size: 1rem;
	color: #ffa000;
}
.noRecomd img{
	display: inline-block;
	max-width: 80%;
	padding:  .5rem;
}